{
  "name": "a-simple-form",
  "version": "1.0.0",
  "description": "a simple form",
  "main": "dist/bin/www.ts",
  "scripts": {
    "dev": "DEBUG=a-simple-form:* nodemon --exec babel-node -- src/bin/www.ts --extensions '.ts,.tsx'",
    "release": "npm run clean && npm run build-app && npm run start",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && npm run build-app",
    "build-app": "babel src -s -d dist --extensions '.ts,.tsx'",
    "start": "node dist/bin/www.ts",
    "test": "NODE_ENV=test jest src/tests/index.test.ts",
    "coverage": "npm run test -- '--coverage'",
    "coverage:coveralls": "npm run coverage && coveralls < coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okezieobi/a-simple-form.git"
  },
  "author": "Frank Okezie Obiedere",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/okezieobi/a-simple-form/issues"
  },
  "homepage": "https://github.com/okezieobi/a-simple-form#readme",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-validator": "^6.10.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "morgan": "~1.9.1",
    "puppeteer": "^7.1.0",
    "swagger-jsdoc": "^4.3.2",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.13.0",
    "@babel/register": "^7.11.5",
    "@tsconfig/recommended": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.31",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "coveralls": "^3.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.6"
  }
}
